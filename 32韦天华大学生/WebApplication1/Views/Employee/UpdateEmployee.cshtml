@model WebApplication1.Models.Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UpdateEmployee</title>
</head>
<body>
    <div> 
        @*@ViewBag.id*@
        <form action="/employee/Update" method="post">
            姓名：<input type="text" name="Name"value="@Model.Name" >
